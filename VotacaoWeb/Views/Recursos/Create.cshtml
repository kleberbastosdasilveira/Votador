
@model VotacaoWeb.ViewModels.RecursoViewModel

@{
    ViewData["Title"] = "Criação de Recurso";
}

<h1 style="padding-top: 50px">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <vc:notificacao></vc:notificacao>

           

            <div class="form-group col-md-5">
                <label asp-for="TituloRecurso" class="control-label"></label>
                <textarea cols="10" rows="2" asp-for="TituloRecurso" class="form-control" placeholder="Titulo do Recurso"></textarea>
                <span asp-validation-for="TituloRecurso" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="DescricaoRecurso" class="control-label"></label>
                <textarea rows="15" asp-for="DescricaoRecurso" class="form-control" placeholder="Descrição do Recurso"></textarea>
                <span asp-validation-for="DescricaoRecurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-info" asp-action="Index" title="Voltar">Voltar <i class="fa fa-reply" aria-hidden="true"></i></a>
                <button type="submit" class="btn btn-info">Salvar Recurso <i class="fas fa-save"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

