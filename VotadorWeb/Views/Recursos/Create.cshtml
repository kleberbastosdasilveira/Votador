@model VotadorWeb.ViewModels.RecursoViewModel

@{
    ViewData["Title"] = "Criação de Recurso";
}

    <h1 style="padding-top: 50px">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TituloRecurso" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="TituloRecurso" class="form-control"></textarea>/>
                <span asp-validation-for="TituloRecurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoRecurso" class="control-label"></label>
                <input asp-for="DescricaoRecurso" class="form-control" />
                <span asp-validation-for="DescricaoRecurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a class="btn btn-info" asp-action="Index">Salvar Recurso</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
