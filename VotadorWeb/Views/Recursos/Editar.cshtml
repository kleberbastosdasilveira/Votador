@model VotadorWeb.ViewModels.RecursoViewModel

@{
    ViewData["Title"] = "Recurso";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Editar">
          
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 form-group">
                <label asp-for="TituloRecurso" class="control-label"></label>
                <textarea asp-for="TituloRecurso" cols="40" class="form-control" rows="3"></textarea>
