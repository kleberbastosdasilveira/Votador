                <label asp-for="DescricaoRecurso" class="control-label"></label>
                <textarea asp-for="DescricaoRecurso" class="form-control" cols="40" rows="20"></textarea>
                @*<input asp-for="DescricaoRecurso" class="form-control" />*@
                <span asp-validation-for="DescricaoRecurso" class="text-danger"></span>
            </div>
            <div class="col-md-2 form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn" supress-by-claim-name="Recurso" supress-by-claim-value="Editar" asp-controller="RegistroVotacoes" asp-action="Create" asp-route-id=""><spam class="fa fa-pencil-alt"></a>
